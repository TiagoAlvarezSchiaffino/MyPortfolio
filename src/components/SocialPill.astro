<a
  {...Astro.props}
  class={`
    relative
    bg-gradient-to-r from-gray-200 to-gray-300 dark:bg-gradient-to-r dark:from-gray-700 dark:to-gray-600
    shadow-md
    border-white/10 dark:border-gray-400
    rounded-lg
    justify-center items-center gap-2 inline-flex
    py-1 px-4
    md:py-2 md:px-4 md:text-base
    text-xs
    transform-gpu
    hover:scale-105 hover:bg-gradient-to-r hover:from-gray-300 hover:to-gray-400 hover:border-transparent
    group max-w-fit
    focus-visible:ring-yellow-500/80 text-md focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2
    active:bg-black
  `}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Link to my social networks"
  role="link"
>
  <span class="relative flex items-center justify-center">
    <slot />
    <span class="absolute top-0 right-0 -mt-2 -mr-2 bg-yellow-500 rounded-full w-3 h-3 animate-ping z-10"></span>
    <span class="absolute top-0 right-0 -mt-2 -mr-2 bg-yellow-500 rounded-full w-3 h-3 animate-pulse z-10"></span>
  </span>
  <div class="absolute inset-0 bg-gradient-to-r from-transparent to-black rounded-lg opacity-0 group-hover:opacity-50 transition-opacity duration-300"></div>
</a>
