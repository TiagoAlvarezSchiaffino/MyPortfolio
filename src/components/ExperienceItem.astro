---
import LinkInline from "./LinkInline.astro"

interface Props {
  title: string
  industry: string
  description: string
  link?: string
  date: string
}

const { title, industry, description, link, date } = Astro.props
---

<div
  class="absolute w-3 h-3 mt-1.5 -start-1.5 mx-12 pb-12 grid before:left-[-35px] before:block before:h-full  before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4"
>
</div>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-gray-800 dark:text-white -left-[29.5px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-800 dark:text-white">{industry}</h4>
      <time class="p-0 m-0 text-sm leading-none text-white/80 dark:text-sky-200/80">{date}</time>
    </div>
  </div>
  <div class="mb-4 pb-4 text-base text-slate-900 dark:text-white">
    {description}
  </div>
  {
    link && (
      <LinkInline href={link}>
        Learn more...{""}
        <svg
          class="w-3 h-3 ms-2 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </svg>
      </LinkInline>
    )
}