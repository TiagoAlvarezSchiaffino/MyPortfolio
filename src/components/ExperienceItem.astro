---
import LinkInline from "./LinkInline.astro"

interface Props {
  title: string
  industry: string
  description: string
  link?: string
  date: string
}

const { title, industry, description, link, date } = Astro.props
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray bg-gray-700 relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-sky-200/80">{date}</time
>
<div class="relative pb-12 md:col-span-2">
  <div class="sticky top-0">
    <span class="text-yellow-400 -left-[42px] absolute rounded-full text-5xl"
      >&bull;</span
    >

<h3 class="text-xl font-bold text-yellow-400">
  {title}
</h3>
<h4 class="font-semibold text-xl text-gray-600 dark:text-white">{industry}</h4>
    <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">{date}</time>
  </div>
</div>
<p class="mb-4 text-base font-normal text-gray-200 text-balance">
  {description}
</p>
{
  link && (
    <a
      href={link}
      target="_blank"
      class="bg-white 
        border border-gray-200 rounded-lg
        inline-flex justify-center items-center gap-x-2
        py-1 px-2 md:py-2 md:px-4
        text-xs md:text-base
        transition
        hover:scale-110 text-gray-900 hover:bg-gray-100"
>
      Learn more...{""}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}